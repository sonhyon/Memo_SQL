SELECT * FROM CUSTOMERS;
SELECT * FROM purchases;

#Q. 2023년에 2회 이상 구매한 고객들의 평균 구매 금액을 구하시오.
SELECT C.NAME, COUNT(P.PURCHASE_ID) AS PURCHASE_CNT FROM PURCHASES P
LEFT JOIN CUSTOMERS C ON C.CUSTOMER_ID = P.CUSTOMER_ID
WHERE P.PURCHASE_DATE BETWEEN '2023-01-01' AND '2023-12-31'
GROUP BY C.NAME
HAVING PURCHASE_CNT >= 2;
