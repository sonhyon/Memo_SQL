CREATE TABLE customers (
  customer_id INT PRIMARY KEY,
  name VARCHAR(50),
  gender VARCHAR(10),
  birth_year INT
);

INSERT INTO customers VALUES
(1, 'Alice', 'F', 1990),
(2, 'Bob', 'M', 1985),
(3, 'Carol', 'F', 1995),
(4, 'David', 'M', 1992),
(5, 'Eve', 'F', 1988);

CREATE TABLE purchases (
  purchase_id INT PRIMARY KEY,
  customer_id INT,
  amount DECIMAL(10, 2),
  purchase_date DATE
);

